{
  "id": null,
  "title": "Jetson Monitoring Dashboard",
  "tags": ["jetson", "monitoring", "ai", "hardware"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 5,
  "refresh": "5s",
  "style": "dark",
  "panels": [
    {
      "type": "row",
      "title": "System Overview",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "gauge",
      "title": "GPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jetson_gpu_load_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "GPU Usage"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["mean"], "fields": "", "values": false },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "gridPos": { "x": 0, "y": 1, "w": 6, "h": 5 }
    },
    {
      "type": "gauge",
      "title": "RAM Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jetson_ram_used_mb{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "RAM Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 16000,
          "unit": "megabytes",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 8000 },
              { "color": "red", "value": 12000 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["mean"], "fields": "", "values": false },
        "orientation": "horizontal",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "gridPos": { "x": 6, "y": 1, "w": 6, "h": 5 }
    },
    {
      "type": "timeseries",
      "title": "CPU Temperature (°C)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jetson_cpu_temp_c{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "CPU Temp"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "gridPos": { "x": 12, "y": 1, "w": 12, "h": 5 }
    },
    {
      "type": "row",
      "title": "Temperature Sensors",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "GPU Temperature (°C)",
      "targets": [
        {
          "expr": "jetson_gpu_temp_c{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "GPU Temp"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "celsius", "color": { "mode": "palette-classic" } } },
      "gridPos": { "x": 0, "y": 7, "w": 8, "h": 5 }
    },
    {
      "type": "timeseries",
      "title": "SOC0 Temperature (°C)",
      "targets": [
        {
          "expr": "jetson_soc0_temp_c{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "SOC0 Temp"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "celsius", "color": { "mode": "palette-classic" } } },
      "gridPos": { "x": 8, "y": 7, "w": 8, "h": 5 }
    },
    {
      "type": "timeseries",
      "title": "SOC1 Temperature (°C)",
      "targets": [
        {
          "expr": "jetson_soc1_temp_c{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "SOC1 Temp"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "celsius", "color": { "mode": "palette-classic" } } },
      "gridPos": { "x": 16, "y": 7, "w": 4, "h": 5 }
    },
    {
      "type": "timeseries",
      "title": "SOC2 Temperature (°C)",
      "targets": [
        {
          "expr": "jetson_soc2_temp_c{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}",
          "legendFormat": "SOC2 Temp"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "celsius", "color": { "mode": "palette-classic" } } },
      "gridPos": { "x": 20, "y": 7, "w": 4, "h": 5 }
    },
    {
      "type": "row",
      "title": "CPU Metrics",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 1 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "CPU Per-Core Usage (%)",
      "targets": [
        { "expr": "jetson_cpu_core0_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 0" },
        { "expr": "jetson_cpu_core1_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 1" },
        { "expr": "jetson_cpu_core2_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 2" },
        { "expr": "jetson_cpu_core3_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 3" },
        { "expr": "jetson_cpu_core4_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 4" },
        { "expr": "jetson_cpu_core5_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 5" },
        { "expr": "jetson_cpu_core6_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 6" },
        { "expr": "jetson_cpu_core7_percent{job=\"jetson_remote\", instance!=\"pushgateway:9091\"}", "legendFormat": "Core 7" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "color": { "mode": "palette-classic" } } },
      "options": { "legend": { "displayMode": "list", "placement": "right" } },
      "gridPos": { "x": 0, "y": 13, "w": 24, "h": 7 }
    }
  ]
}
