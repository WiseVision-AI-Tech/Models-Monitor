{
  "id": null,
  "title": "MLflow Containers Monitoring",
  "tags": ["mlflow", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 2,
  "refresh": "10s",
  "style": "dark",
  "panels": [
    {
      "type": "gauge",
      "title": "Container Up Status",
      "targets": [
        { "expr": "mlops_container_up", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Container Restart Count",
      "targets": [
        { "expr": "mlops_container_restart_count", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Container Health Status",
      "targets": [
        { "expr": "mlops_container_health_status", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "none",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Container Up Time",
      "targets": [
        { "expr": "time() - mlops_container_start_time", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 0,
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "x": 0, "y": 18, "w": 24, "h": 8 }
    }

  ]
}
