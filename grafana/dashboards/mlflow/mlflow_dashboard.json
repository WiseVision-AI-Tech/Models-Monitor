{
  "id": null,
  "title": "MLflow Containers Monitoring",
  "tags": ["mlflow", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "gauge",
      "title": "Container Up Status",
      "targets": [
        { "expr": "mlops_container_up", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "gauge",
      "title": "Container Restart Count",
      "targets": [
        { "expr": "mlops_container_restart_count", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "gauge",
      "title": "Container Health Status",
      "targets": [
        { "expr": "mlops_container_health_status", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Container Start Time",
      "targets": [
        { "expr": "container_start_time", "legendFormat": "{{name}}"} 
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "dateTimeAsIso",
          "color": { "mode": "palette-classic" }
        }
      },
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 }
    }
  ]
}
